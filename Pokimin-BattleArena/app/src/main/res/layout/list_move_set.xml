<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/move_sets_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Move_Name"
            android:id="@+id/battle_move_name"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="x Move_Count"
            android:id="@+id/battle_move_count"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/move_sets_bottom"
        android:layout_below="@+id/move_sets_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Move_Type"
            android:id="@+id/battle_move_type"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</RelativeLayout>